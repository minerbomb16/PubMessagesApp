<h2>Potwierdź zmianę hasła</h2>

<form asp-action="VerifyChangePasswordCode" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label for="code">Kod z Google Authenticator:</label>
        <input type="text" id="code" name="code" maxlength="6" pattern="\d{6}" required />
    </div>
    <button type="submit">Potwierdź</button>
</form>
